<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menuBackground"
        android:gravity="center">

        <View
            android:id="@+id/borderTop"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/textColor" />

        <ImageView
            android:id="@+id/alertImageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/borderTop"
            android:src="@drawable/error" />

        <TextView
            android:id="@+id/warningMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/alertImageView"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="Не беше открит трениращ с това ID!"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notFoundName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/warningMessage"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:textColor="#ff0004"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notFoundName"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/appForeground"
            android:text="Опитай отново"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/borderBottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tryAgainButton"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/textColor" />
    </RelativeLayout>

</RelativeLayout>
